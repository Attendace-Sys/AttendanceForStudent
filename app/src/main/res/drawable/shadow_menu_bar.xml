<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="4dp" />

            <gradient android:startColor="#40CCCCCC"
                android:endColor="@color/lightWhite"
                android:angle="90"/>

            <corners android:radius="3dp" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/lightWhite" />

            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>